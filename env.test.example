# Test Environment Configuration
# Copy this file to .env.test and update with your test database credentials

NODE_ENV=test
PORT=4001

# Test Database (use separate test database)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://focusflow_test:test_password@localhost:5432/focusflow_test

# Test Security Keys (NOT for production)
JWT_SECRET=test-jwt-secret-minimum-32-characters-long-for-testing-only
TOKEN_ENCRYPTION_KEY=dGVzdC1lbmNyeXB0aW9uLWtleS1mb3ItdGVzdGluZy1vbmx5

# JWT Settings
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Database Settings
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_SSL=false

# Logging (suppress during tests)
LOG_LEVEL=error
LOG_FORMAT=text

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting (relaxed for tests)
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=100

# Python Service (optional for tests)
PYTHON_SERVICE_URL=http://localhost:8000

# OAuth (not needed for most tests)
ZOHO_CLIENT_ID=test_client_id
ZOHO_CLIENT_SECRET=test_client_secret
ZOHO_REDIRECT_URI=http://localhost:4001/auth/callback
ZOHO_ACCOUNTS_BASE_URL=https://accounts.zoho.com
ZOHO_CLIQ_API_BASE_URL=https://cliq.zoho.com/api/v2
ZOHO_SCOPES=ZohoCliq.bots.CREATE,ZohoCliq.bots.READ

# Suppress logs during tests
SUPPRESS_LOGS=true



