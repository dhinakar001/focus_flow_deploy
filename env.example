# FocusFlow Environment Configuration
# Copy this file to .env and fill in your values
# Command: cp env.example .env

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/focusflow

# Connection pool settings
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000
DB_SSL=false

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED IN PRODUCTION)
# =============================================================================
# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be at least 32 characters
JWT_SECRET=change-this-in-production-generate-strong-secret

# Token Encryption Key - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# Must be base64-encoded 32-byte value
TOKEN_ENCRYPTION_KEY=

# JWT expiration settings
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Password hashing rounds (12 is recommended)
BCRYPT_ROUNDS=12

# OAuth state security
OAUTH_STATE_SECRET=generate-random-secret-here
OAUTH_STATE_TTL_MS=600000

# =============================================================================
# ZOHO CLIQ OAUTH CONFIGURATION (REQUIRED FOR INTEGRATION)
# =============================================================================
# Incoming Webhook URL (Alternative to OAuth - easier setup)
# Get this from Zoho Cliq: Settings → Integrations → Incoming Webhooks
ZOHO_CLIQ_WEBHOOK_URL=https://cliq.zoho.com/incomingwebhook/your-webhook-id
# Get these from https://api-console.zoho.com/
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here

# OAuth redirect URI (must match Zoho console configuration)
# For local development: http://localhost:4000/auth/callback
# For production: https://your-domain.com/auth/callback
ZOHO_REDIRECT_URI=http://localhost:4000/auth/callback

# Zoho API endpoints
ZOHO_ACCOUNTS_BASE_URL=https://accounts.zoho.com
ZOHO_CLIQ_API_BASE_URL=https://cliq.zoho.com/api/v2

# Required OAuth scopes (comma-separated)
ZOHO_SCOPES=ZohoCliq.bots.CREATE,ZohoCliq.bots.READ,ZohoCliq.bots.UPDATE,ZohoCliq.bots.entries.READ,ZohoCliq.bots.entries.WRITE

# =============================================================================
# PYTHON AI SERVICE CONFIGURATION
# =============================================================================
# Python AI service URL
PYTHON_SERVICE_URL=http://localhost:8000

# AI service timeout (milliseconds)
SUMMARY_SERVICE_TIMEOUT_MS=10000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
# Options: debug, info, warn, error
LOG_FORMAT=text
# Options: text, json

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
# Time window in milliseconds (15 minutes default)
RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window

# =============================================================================
# REQUEST CONFIGURATION
# =============================================================================
BODY_LIMIT=10mb
REQUEST_TIMEOUT=30000

# =============================================================================
# PAYMENT INTEGRATION (OPTIONAL)
# =============================================================================
# Payment provider: 'stripe' or 'razorpay'
DEFAULT_PAYMENT_PROVIDER=stripe

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

